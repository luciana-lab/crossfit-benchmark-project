<h1>Welcome!!</h1>

<h4>Search Workout</h4>
    <%= form_tag root_path, method: 'get' do %>
        <%= label_tag(:search) %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag("Search") %>
    <% end %>

<% if @workouts.empty? %>
    <p>No workouts were found.</p>
<% else %>
    <% @workouts.each do |workout| %>
        <div><%= link_to workout.name, workout_path(workout) %></div>
    <% end %>
<% end %>
