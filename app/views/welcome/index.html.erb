<div class="header-welcome">

    <h4>Search Workout</h4>
        <%= form_tag root_path, method: 'get' do %>
            <%= label_tag(:search) %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag("Search") %>
        <% end %>
        
</div>

<div class="content-welcome">

    <% if @workouts.empty? %>
        <p>No workouts were found.</p>
    <% else %>
        <% @workouts.each do |workout| %>
            <p><%= link_to workout.name, workout_path(workout) %></p>
        <% end %>
    <% end %>
    
</div>
