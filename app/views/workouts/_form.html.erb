<%= render partial: 'layouts/error', locals: { object: @workout } %>

<%= form_for @workout do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :group %>
        <%= f.text_field :group, list: "group_autocomplete" %>
        <datalist id="group_autocomplete">
            <% Workout.all.map(&:group).uniq.each do |select| %>
                <option value="<%= select %>">
            <% end %>
        </datalist>
    </div>

    <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(Workout.all.map {|select| [ select.category ]}.uniq), {prompt: true} %>
    </div>

    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>

    <div class="form-group">
    <%= f.label :about %>
    <%= f.text_area :about %>
    </div>

    <div class="actions">
    <%= f.submit "Submit Workout" %>
    </div>

<% end %>